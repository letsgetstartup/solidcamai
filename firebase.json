{
    "functions": [
        {
            "source": "functions",
            "runtime": "python311",
            "codebase": "default",
            "ignore": [
                "venv",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "hosting": [
        {
            "site": "solidcamal",
            "public": "web",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "/dashboard",
                    "destination": "/dashboard.html"
                },
                {
                    "source": "/bigscreen",
                    "destination": "/bigscreen.html"
                },
                {
                    "source": "/equations{,/**}",
                    "destination": "/equations/index.html"
                },
                {
                    "source": "/pair_init",
                    "function": "pair_init"
                },
                {
                    "source": "/pair_confirm",
                    "function": "pair_confirm"
                },
                {
                    "source": "/pair_token",
                    "function": "pair_token"
                },
                {
                    "source": "/portal_api/v1/ingest",
                    "function": "ingest_telemetry"
                },
                {
                    "source": "/portal_api/**",
                    "function": "portal_api"
                },
                {
                    "source": "/equations_api/**",
                    "function": "equations_api"
                },
                {
                    "source": "/machines",
                    "destination": "/machines.html"
                },
                {
                    "source": "/mgmt/**",
                    "function": "generate_qr"
                },
                {
                    "source": "/mobile/v1/**",
                    "function": "get_mobile_context"
                },
                {
                    "source": "/mobile/**",
                    "destination": "/mobile/index.html"
                },
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "headers": [
                {
                    "source": "**",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "no-cache, no-store, must-revalidate"
                        }
                    ]
                }
            ]
        },
        {
            "site": "solidcamal-chat",
            "public": "web_simco_public",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "/ask",
                    "function": "ask"
                },
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        }
    ]
}