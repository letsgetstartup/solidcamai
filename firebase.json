{
    "functions": [
        {
            "source": "functions",
            "runtime": "python311",
            "codebase": "default",
            "ignore": [
                "venv",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "hosting": {
        "public": "web",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/dashboard",
                "destination": "/dashboard.html"
            },
            {
                "source": "/bigscreen",
                "destination": "/bigscreen.html"
            },
            {
                "source": "/equations{,/**}",
                "destination": "/equations/index.html"
            },
            {
                "source": "/equations_api/**",
                "function": "equations_api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}